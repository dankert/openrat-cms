<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../template-engine/components/template.xsd">
	<form action="folder" subaction="edit">
		<table>
			<row class="headline">
				<column class="help">
					<!-- 
					<text key="SELECT"></text>
				 -->
					<checkbox name="checkall" />
				</column>
				<column class="help">
					<text key="GLOBAL_TYPE"></text>
					<text raw="_/_"></text>
					<text key="GLOBAL_NAME"></text>
				</column>
			</row>
			<list list="object" extract="true">
				<row class="data">
					<column width="1%">
						<if true="${writable}">
							<checkbox name="${id}"></checkbox>
						</if>
						<if false="writable">
							<text raw="_"></text>
						</if>
					</column>
					<column class="clickable">
						<label for="${id}">
							<link type="open" name="${name}" action="${type}" id="${objectid}">
								<image action="${icon}"></image>
								<text var="name" maxlength="40"></text>
								<text raw="_"></text>
							</link>
						</label>
					</column>
				</row>
			</list>
			<if empty="object">
				<row>
					<column colspan="2">
						<text text="GLOBAL_NOT_FOUND"></text>
					</column>
				</row>
			</if>

			<row class="data">
				<column>
					<text raw="_" />
				</column>
				<column colspan="2" class="clickable">
					<link type="dialog" action="folder" subaction="create">
						<image method="add"></image>
						<text key="menu_folder_create"></text>
					</link>
				</column>
			</row>
		</table>
					<group title="#{options}">
						<set var="type" value="${defaulttype}"></set>
						<list list="actionlist" value="actiontype">
							<part class="line">
								<part class="label">
								</part>
								<part class="input">
									<radio name="type" value="${actiontype}"></radio>
									<label for="type" value="${actiontype}">
										<text raw="_"></text>
										<text key="${actiontype}" prefix="FOLDER_SELECT_"></text>
									</label>
								</part>
							</part>
						</list>
							<part class="line">
								<part class="label">
								</part>
								<part class="input">
									<text raw="____" />
									<checkbox name="confirm" required="true" />
									<label for="confirm">
										<text key="CONFIRM_DELETE"></text>
									</label>
								</part>
							</part>
						
						<part class="line">
							<part class="label">
								<text key="FOLDER_SELECT_TARGET_FOLDER" />
							</part>
							<part class="input">
								<selector types="folder" param="targetobjectid" name="${rootfoldername}"
									id="${rootfolderid}" folderid="${rootfolderid}" />
							</part>
						</part>
					</group>
	</form>
	<!--	<insert script="mark" inline="true"></insert> -->
</output>