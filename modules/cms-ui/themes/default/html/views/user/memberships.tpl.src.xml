<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.openrat.de/template ../../../../../../template-engine/components/template.xsd">
    <form>
        <table>
            <row class="headline">
                <column colspan="2">
                    <text key="group"></text>
                </column>
            </row>
            <list list="memberships" extract="true">
                <row class="data">
                    <column width="10%">
                        <checkbox name="group${id}" default="${member}"></checkbox>
                    </column>
                    <column>
                        <label for="${var}">
                            <image action="group"/>
                            <text var="name"/>
                        </label>
                    </column>
                </row>
            </list>
        </table>
    </form>
</output>    