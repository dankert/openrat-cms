<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../template.xsd">
	<header back="true" />
	<form>

		<if value="var:type" equals="folder">
			<group title="message:options">
				<part class="line">
					<part class="label">
					</part>
					<part class="input">
						<set var="inherit" value="1"></set>
						<checkbox name="inherit" />
						<label for="inherit">
							<text key="inherit_rights"></text>
						</label>
					</part>
				</part>
			</group>
		</if>
	</form>
</output>