<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
    <form>
        <table class="or-table--sortable">

            <row class="headline">
                <column class="help">
                    <text value="${message:FOLDER_ORDER}"></text>
                </column>
                <column class="help">
                    <text value="${message:TYPE}"></text>
                </column>
                <column class="help">
                    <text value="${message:NAME}"></text>
                </column>
                <column class="help">
                    <text value="${message:FILENAME}"></text>
                </column>
                <column class="help">
                    <text value="${message:LASTCHANGE}"></text>
                </column>
            </row>
            <list list="${object}" extract="true">
                <row class="data" id="${id}">
                    <column>
                        <text value=" "></text>
                    </column>
                    <column>
                        <text class="sort-value" value="${icon}" />
                        <image action="${icon}"></image>
                    </column>
                    <column>
                        <text value="${name}"></text>
                    </column>
                    <column>
                        <text value="${filename}"></text>
                    </column>
                    <column>
                        <date date="${date}"></date>
                    </column>
                </row>
            </list>
        </table>

        <hidden name="order" default=""/>
    </form>
</output>