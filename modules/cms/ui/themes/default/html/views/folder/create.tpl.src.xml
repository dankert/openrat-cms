<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">

    <part class="linklist">

        <if true="${mayCreateFolder}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createfolder">
                    <text value="${message:menu_createfolder}"></text>
                </link>
            </part>
        </if>

        <if true="${mayCreatePage}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createpage">
                    <text value="${message:menu_createpage}"></text>
                </link>
            </part>
        </if>

        <if true="${mayCreateFile}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createfile">
                    <text value="${message:menu_createfile}"></text>
                </link>
            </part>
        </if>

        <if true="${mayCreateImage}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createimage">
                    <text value="${message:menu_createimage}"></text>
                </link>
            </part>
        </if>

        <if true="${mayCreateText}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createtext">
                    <text value="${message:menu_createtext}"></text>
                </link>
            </part>
        </if>

        <if true="${mayCreateUrl}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createurl">
                    <text value="${message:menu_createurl}"></text>
                </link>
            </part>
        </if>

        <if true="${mayCreateLink}">
            <part class="clickable,linklist-line,round-corners,hover-effect">
                <link type="dialog" subaction="createlink">
                    <text value="${message:menu_createlink}"></text>
                </link>
            </part>
        </if>
    </part>
</output>