<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
  <form>
    <fieldset class="line" label="">
      <part class="label">
        <text value="${message:TEMPLATE}"/>
      </part>
      <part class="value">
        <selectbox name="templateid" default="" list="templates"/>
      </part>
    </fieldset>
    <fieldset class="line" label="">
      <part class="label">
        <text value="${message:NAME}"/>
      </part>
      <part class="value">
        <input name="name" size="20" class="focus,name"/>
      </part>
    </fieldset>
    <fieldset class="line" label="">
      <part class="label">
        <text value="${message:DESCRIPTION}"/>
      </part>
      <part class="value">
        <inputarea rows="5" name="description" default=""/>
      </part>
    </fieldset>
  </form>
</output>
