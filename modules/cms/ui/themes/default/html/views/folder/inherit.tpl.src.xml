<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<header back="true" />
	<form>

		<if value="${type}" equals="folder">
			<group title="#{options}">
				<part class="line">
					<part class="label">
					</part>
					<part class="input">
						<set var="inherit" value="1"></set>
						<input type="checkbox" name="inherit"></input>
						<label for="inherit">
							<text key="inherit_rights"></text>
						</label>
					</part>
				</part>
			</group>
		</if>
	</form>
</output>