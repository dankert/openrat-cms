<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
  <form>
    <group title="${message:OPTIONS}">
      <fieldset class="line" label="">
        <part class="label">
          <text value="${message:type}"/>
        </part>
        <part class="value">
          <set var="gz" value="gz"/>
          <selectbox list="formats" name="format" default="gz"/>
          <set var="replace" value="1"/>
          <radio name="replace" value="1"/>
          <label for="replace_1">
            <text value="${message:replace}"/>
          </label>
          <newline/>
          <radio name="replace" value="0"/>
          <label for="replace_0">
            <text value="${message:new}"/>
          </label>
        </part>
      </fieldset>
    </group>
  </form>
</output>
