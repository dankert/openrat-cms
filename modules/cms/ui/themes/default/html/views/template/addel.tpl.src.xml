<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<header back="true"></header>
	<form>
	
		<part class="line">
			<part class="label">
				<text text="global_name"></text>
			</part>
			<part class="input">
				<input name="name" maxlength="50" required="true" focus="true"></input>
			</part>
		</part>
		
		<part class="line">
			<part class="label">
				<text text="element_type"></text>
			</part>
			<part class="input">
				<set var="text" value="text"></set>
				<selectbox list="types" name="typeid" lang="true"></selectbox>
			</part>
		</part>

		<group title="#{options}"></group>
		
		<part class="line">
			<part class="label">
			</part>
			<part class="input">
				<label for="addtotemplate">
					<checkbox name="addtotemplate" default="true"></checkbox>
					<text key="menu_template_srcelement"></text>
				</label>
			</part>
		</part>
	</form>
</output>