<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
  <table>
    <row class="headline">
      <column>
        <text value="${message:name}"/>
      </column>
    </row>
    <list list="${templates}" extract="true">
      <row class="data">
        <column url="${url}">
          <text value="${name}"/>
        </column>
      </row>
    </list>
  </table>
  <if empty="${templates}">
    <text value="${message:NO_TEMPLATES_AVAILABLE_DESC}"/>
  </if>
  <link class="action" action="template" subaction="add">
    <text value="${message:menu_template_add}"/>
  </link>
</output>
