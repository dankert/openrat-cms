<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<header views="src,remove"></header>
  
	<table>
		<row class="headline">
			<column>
				<text value="${message:name}"></text>
			</column>
			<column>
				<text value="${message:type}"></text>
			</column>
		</row>
		<list list="${elements}" extract="true">
			<row class="data">
				<column class="clickable">
					<link type="open" id="${id}" name="${name}" action="element">
						<image elementtype="${type}"></image>
						<text value="${name}" title="${description}"></text>
					</link>
				</column>
				<column>
					<text value="${message:el_${type}}"></text>
				</column>
			</row>
		</list>
		<if empty="${elements}">
			<row>
				<column colspan="2">
					<text value="${message:GLOBAL_NOT_FOUND}"></text>
				</column>
			</row>
		</if>
		<row class="data">
			<column colspan="2" class="clickable">
				<link type="dialog" subaction="addel" action="template" id="${templateid}">
					<image method="add" />
					<text value="${message:menu_template_addel}"></text>
				</link>
			</column>
		</row>
	</table>

	<list list="${models}" extract="true">

		<group title="${name}">

			<part class="clickable">
				<text value="${source}" escape="true" type="code" maxlength="200"></text>
				<newline/>

				<link type="edit" subaction="src" var1="modelid" value1="${modelid}" class="or-form-button">
					<image action="template"/>
					<text value="${message:edit}"></text>
				</link>
			</part>
		</group>
	</list>

</output>