<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form>
		<part class="line">
			<part class="label">
				<text value="${message:TEMPLATE_NAME}"></text>
			</part>
			<part class="value">
				<input name="name" maxlength="50"></input>
			</part>
		</part>
		<group></group>

		<part class="line">
			<part class="label">
				<text value="${message:file_extension}"></text>
			</part>
			<part class="value">
				<link type="view" subaction="extension">
					<part>
						<text value="${extension}"></text>
					</part>
				</link>
				<part class="clickable">
					<link class="action" type="view" subaction="extension">
						<text value="${message:edit}"></text>
					</link>
				</part>
			</part>
		</part>

		<part class="line">
			<part class="label">
				<text value="${message:file_mimetype}"></text>
			</part>
			<part class="value">
				<link action="template" subaction="extension">
					<part>
						<text value="${mime_type}"></text>
					</part>
				</link>
			</part>
		</part>

	</form>
</output>