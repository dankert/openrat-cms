<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form method="get" subaction="diff" label="${message:compare}" cancel="false" visible="true">
		<list list="${languages}" value="language">

			<group collapsible="true" title="${message:language}: ${language.name}">

				<table>
					<row class="headline">

						<!--
						<column class="help">
							<text value="${message:NR}"/>
						</column>-->
						<column class="help" colspan="2">
							<text value="${message:COMPARE}"/>
						</column>
						<column class="help">
							<text value="${message:VALUE}"/>
						</column>
						<column class="help">
							<text value="${message:DATE}"/>
						</column>
						<column class="help">
							<text value="${message:USER}"/>
						</column>
						<column class="help">
							<text value="${message:STATE}"/>
						</column>
						<column class="help">
							<text value="${message:ACTION}"/>
						</column>
					</row>

					<set var="values" value="${language}" key="values"/>
					<if empty="${values}">
						<row>
							<column colspan="8">
								<text value="${message:NOT_FOUND}"/>
							</column>
						</row>
					</if>
					<list list="${values}" extract="true">
						<row class="data">
							<!--
							<column>
								<text value="${lfd_nr}"/>
							</column>-->
							<column width="5%">
								<if true="${comparable}">
									<radio name="compareid" value="${id}"/>
								</if>
								<else>
									<text value=" "/>
								</else>
							</column>
							<column width="5%">
								<if true="${comparable}">
									<radio name="withid" value="${id}"/>
								</if>
								<else>
									<text value=" "/>
								</else>
							</column>
							<column width="50%">
								<text value="${text}" title="${text}"/>
							</column>
							<column>
								<date date="${date}"/>
							</column>
							<column>
								<text value="${user}"/>
							</column>
							<if true="${publish}">
								<column>
									<text value="${message:VALUE_PUBLIC}" type="strong"/>
								</column>
							</if>
							<else>
								<if true="${releasable}">
									<column class="act-clickable">
										<link type="post" subaction="release" var1="valueid" value1="${id}"
											  id="${objectid}" title="${message:RELEASE_DESC}">
											<text value="${message:RELEASE}" type="strong"/>
										</link>
									</column>
								</if>
								<else>
									<column>
										<text value="${message:INACTIVE}" type="emphatic"/>
									</column>
								</else>
							</else>
							<if true="${active}">
								<column>
									<text value="${message:ACTIVE}" type="emphatic"/>
								</column>
							</if>
							<else>
								<if true="${usable}">
									<column class="act-clickable">
										<link type="post" subaction="use" var1="valueid" value1="${valueid}"
											  id="${objectid}"
											  title="${message:VALUE_USE_DESC}">
											title="${message:USE_DESC}">
											<text value="${message:VALUE_USE}"/>
										</link>
									</column>
								</if>
								<else>
									<column>
									</column>
								</else>
							</else>
						</row>
					</list>
				</table>
			</group>
		</list>
	</form>
</output>
