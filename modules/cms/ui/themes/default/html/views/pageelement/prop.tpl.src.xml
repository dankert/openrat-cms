<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form>
		<table>
			<row>
				<column>
					<text text="name"></text>
				</column>
				<column class="name">
					<text var="name"></text>
				</column>
			</row>
			<row>
				<column>
					<text text="description"></text>
				</column>
				<column>
					<text var="description"></text>
				</column>
			</row>
			<row>
				<column>
					<text text="type"></text>
				</column>
				<column class="filename">
					<image elementtype="${element_type}"></image>
					<text key="el_${element_type}"></text>
				</column>
			</row>
			<row>
				<column colspan="2">
					<group title="#{additional_info}"></group>
				</column>
			</row>
			<row>
				<column>
					<text key="template"></text>
				</column>
				<column>
					<if present="template_url">
						<link url="${template_url}" target="cms_main_main">
							<image file="icon_template"></image>
							<text var="template_name"></text>
						</link>
					</if>
					<if empty="template_url">
						<image file="icon_template"></image>
						<text var="template_name"></text>
					</if>
				</column>
			</row>
			<row>
				<column>
					<text key="element"></text>
				</column>
				<column>
					<if present="element_url">
						<link url="${element_url}" target="cms_main_main">
							<image elementtype="${element_type}"></image>
							<text var="element_name"></text>
						</link>
					</if>
					<if empty="element_url">
						<image icon="element"></image>
						<text var="element_name"></text>
					</if>
				</column>
			</row>
			<row>
				<column colspan="2">
					<group title="#{prop_userinfo}"></group>
				</column>
			</row>
			<row>
				<column>
					<text text="lastchange"></text>
				</column>
				<column>
					<table>
						<row>
							<column>
								<image icon="el_date"></image>
								<date date="${lastchange_date}"></date>
							</column>
							<column>
								<image icon="user"></image>
								<user user="${lastchange_user}"></user>
							</column>
						</row>
					</table>
				</column>
			</row>
		</table>
	</form>
</output>