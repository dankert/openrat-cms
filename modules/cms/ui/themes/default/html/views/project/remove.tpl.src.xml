<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form>
		<part class="line">
			<part class="label">
				<text value="${message:GLOBAL_NAME}"></text>
			</part>

			<part class="input">
				<text value="${name}" class="name"></text>
			</part>
		</part>
		<group title="${message:options}">
			<part class="line">
				<part class="label">
				</part>

				<part class="input">
					<part>
						<checkbox name="delete" required="true"></checkbox>
						<label for="delete">
							<text value="${message:CONFIRM_DELETE}"></text>
						</label>
					</part>
				</part>
			</part>
		</group>
	</form>
</output>