<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">


	<group title="${message:content}">
		<part class="act-clickable">
			<image url="${preview}" class="image--preview" />

			<newline/>
			<link type="dialog" subaction="upload">
				<image method="edit"/>
				<text value="${message:file_replace}"/>
			</link>
		</part>

		<part>
			<link type="dialog" subaction="size" clickable="true">
				<image action="file"/>
				<text value="${message:file_image_resize}"/>
			</link>
		</part>
	</group>

</output>
