<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
  <form>
    <fieldset class="line" label="">
      <part class="label">
        <text value="${message:IMAGE_OLD_SIZE}"/>
      </part>
      <part class="value">
        <text value="${width}"/>
        <text value=" * "/>
        <text value="${height}"/>
      </part>
    </fieldset>
    <if not="" empty="${formats}">
      <group title="${message:IMAGE_NEW_SIZE}">
        <fieldset class="line" label="">
          <part class="label"/>
          <part class="value">
            <radio name="type" value="factor"/>
            <label for="type_factor">
              <text value="${message:FILE_IMAGE_SIZE_FACTOR}"/>
            </label>
            <selectbox name="factor" list="factors"/>
            <set var="factor" value="1"/>
          </part>
        </fieldset>
        <fieldset class="line" label="">
          <part class="label"/>
          <part class="value">
            <radio name="type" value="input"/>
            <label for="type_input">
              <text value="${message:FILE_IMAGE_NEW_WIDTH_HEIGHT}"/>
            </label>
          </part>
          <part class="label"/>
          <part class="value">
            <input name="width" size="10"/>
            <text value=" * "/>
            <input name="height" size="10"/>
          </part>
        </fieldset>
      </group>
      <group title="${message:options}">
        <fieldset class="line" label="">
          <part class="label">
            <label for="format">
              <text value="${message:FILE_IMAGE_FORMAT}"/>
            </label>
          </part>
          <part class="value">
            <selectbox name="format" list="formats"/>
          </part>
        </fieldset>
        <fieldset class="line" label="">
          <part class="label">
            <label for="jpeglist_compression">
              <text value="${message:FILE_IMAGE_JPEG_COMPRESSION}"/>
            </label>
          </part>
          <part class="value">
            <set var="jpeg_compression" value="70"/>
            <selectbox list="jpeglist" name="jpeg_compression"/>
          </part>
        </fieldset>
        <fieldset class="line" label="">
          <part class="label">
					</part>
          <part class="value">
            <checkbox name="copy"/>
            <label for="copy">
              <text value="${message:copy}"/>
            </label>
          </part>
        </fieldset>
      </group>
    </if>
  </form>
</output>
