<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
    <group title="${message:prop_userinfo}" open="false">
        <part class="line">
            <part class="label">
                <label for="create_date">
					<text text="global_created"/>
                </label>
            </part>
            <part class="input">
                <image icon="el_date"></image>
                <date date="${create_date}"></date>
                <newline></newline>
                <image icon="user"></image>
                <user user="${create_user}"></user>
            </part>
        </part>
        <part class="line">
            <part class="label">
                <label for="lastchange_date">
                    <text text="global_lastchange"></text>
                </label>
            </part>
            <part class="input">
                <image icon="el_date"></image>
                <date date="${lastchange_date}"></date>
                <newline></newline>
                <image icon="user"></image>
                <user user="${lastchange_user}"></user>
            </part>
        </part>
        <part class="line">
            <part class="label">
                <label for="published_date">
                    <text text="global_published"></text>
                </label>
            </part>
            <part class="input">
                <image icon="el_date"></image>
                <date date="${published_date}"></date>
                <newline></newline>
                <image icon="user"></image>
                <user user="${published_user}"></user>
            </part>
        </part>
    </group>
</output>
