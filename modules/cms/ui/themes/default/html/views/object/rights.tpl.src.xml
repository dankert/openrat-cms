<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">

	<table>
		<row class="headline">
			<column class="help">
				<text value="${message:NAME}"></text>
			</column>
			<column class="help">
				<text value="${message:LANGUAGE}"></text>
			</column>
			<list list="${show}" value="t">
				<column class="help">
					<text value="${message:acl_${t}_abbrev}"></text>
				</column>
			</list>
			<column class="help">
				<text value="${message:delete}"></text>
			</column>
		</row>
		<if empty="${acls}">
			<row class="data">
				<column colspan="99">
					<text value="${message:NOT_FOUND}"></text>
				</column>
			</row>
		</if>
		<if not="true" empty="${acls}"></if>
		<list list="${acls}" key="aclid" value="acl" extract="true">
			<row class="data">
				<column>
					<if present="username">
						<image action="user"></image>
						<text value="${username}"></text>
					</if>
					<if present="groupname">
						<image action="group"></image>
						<text value="${groupname}"></text>
					</if>
					<if not="true" present="username">
						<if not="true" present="groupname">
							<image action="group"></image>
							<text value="${message:all}"></text>
						</if>
					</if>
				</column>
				<column>
					<text value="${languagename}"></text>
				</column>
				<list list="${show}" value="t">
					<column>
						<set var="bit" value="${acl}" key="${t}" />
						<if true="${bit}">
							<text value="&amp;check;" escape="false" />
						</if>
					</column>
				</list>
				<column class="clickable">
					<link type="post" subaction="delacl" var1="aclid" value1="${aclid}">
						<text value="${message:DELETE}"></text>
					</link>
				</column>
			</row>
		</list>
		<row class="data">
			<column colspan="99" class="clickable">
				<link type="dialog" name="${message:menu_aclform}" subaction="aclform">
					<image method="add" />
					<text value="${message:new}" />
				</link>

			</column>
		</row>
	</table>
</output>