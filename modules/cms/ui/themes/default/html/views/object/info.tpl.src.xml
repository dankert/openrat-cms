<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form readonly="true">
		<group>
			<part class="line">
				<part class="label">
					<text value="${message:global_name}"></text>
				</part>
				<part class="input">
					<text value="${name}" class="name" />
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:global_filename}"></text>
				</part>
				<part class="input">
					<text value="${filename}" class="filename" />
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:file_extension}"></text>
				</part>
				<part class="input">
					<text value="${extension}" class="extension" />
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:global_description}"></text>
				</part>
				<part class="input">
					<text value="${description}" />
				</part>
			</part>
		</group>

		<group title="${message:additional_info}">
			<part class="line">
				<part class="label">
					<label for="full_filename">
						<text value="${message:global_full_filename}"></text>
					</label>
				</part>
				<part class="input">
					<text value="${full_filename}"></text>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="size">
						<text value="${message:FILE_SIZE}"></text>
					</label>
				</part>
				<part class="input">
				</part>
				<text value="${size}" />
			</part>
			<part class="line">
				<part class="label">
					<label for="mimetype">
						<text value="${message:FILE_mimetype}"></text>
					</label>
				</part>
				<part class="input">
					<text value="${mimetype}"></text>
				</part>
			</part>
			<part class="line">
				<part class="label">
				</part>
				<part class="input,clickable">
					<link class="action" type="dialog" subaction="size">
						<text value="${message:menu_file_size}"></text>
					</link>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:${message:id}}"></text>
				</part>
				<part class="input">
					<text value="${objectid}"></text>
				</part>
			</part>
			<if present="cache_filename">
				<part class="line">
					<part class="label">
						<label for="cache_filename">
							<text value="${message:CACHE_FILENAME}"></text>
						</label>
					</part>
					<part class="input">
						<text value="${cache_filename}"></text>
						<newline></newline>
						<image icon="el_date"></image>
						<date date="${cache_filemtime}"></date>
					</part>
				</part>
			</if>
			<part class="line">
				<part class="label">
					<label for="pages">
						<text value="${message:FILE_PAGES}"></text>
					</label>
				</part>
				<part class="input">
					<table>
						<list list="${pages}" extract="true">
							<row>
								<column>
									<link url="${url}" target="cms_main">
										<image type="page"></image>
										<text value="${name}"></text>
									</link>
								</column>
							</row>
						</list>
					</table>
					<if empty="${pages}">
						<text value="${message:GLOBAL_NOT_FOUND}"></text>
					</if>
				</part>
			</part>
		</group>
		<group title="${message:validity}">
			<part class="clickable">
				<link subaction="settings" type="dialog">
					<part class="line">
						<part class="label">
							<text value="${message:global_state}"></text>
						</part>
						<part class="input">
							<if true="${is_valid}"><text value="${message:is_yes}" /></if>
							<else><text value="${message:is_no}" /></else>
						</part>
					</part>
					<part class="line">
						<part class="label">
							<text value="${message:from}"></text>
						</part>
						<part class="input">
							<date date="${valid_from_date}" />
						</part>
					</part>
					<part class="line">
						<part class="label">
							<text value="${message:until}"></text>
						</part>
						<part class="input">
							<date date="${valid_to_date}" />
						</part>
					</part>
				</link>
			</part>
		</group>
		<group title="${message:prop_userinfo}">
			<part class="line">
				<part class="label">
					<text value="${message:global_created}"></text>
				</part>
				<part class="input">
					<image elementtype="date"></image>
					<date date="${create_date}"></date>
					<newline></newline>
					<image action="user"></image>
					<user user="${create_user}"></user>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:global_lastchange}"></text>
				</part>
				<part class="input">
					<image elementtype="date"></image>
					<date date="${lastchange_date}"></date>
					<newline></newline>
					<image action="user"></image>
					<user user="${lastchange_user}"></user>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="published_date">
						<text value="${message:global_published}"></text>
					</label>
				</part>
				<part class="input">
					<image elementtype="date"></image>
					<date date="${published_date}"></date>
					<newline></newline>
					<image action="user"></image>
					<user user="${published_user}"></user>
				</part>
			</part>
		</group>

		<group title="${message:settings}">
			<table filter="true">
				<list list="${settings}" key="name" value="value" >
					<row class="data">
						<column>
							<text value="${name}" />
						</column>
						<column class="clickable">
							<link subaction="settings" type="dialog">
								<text value="${value}" />
							</link>
						</column>
					</row>
				</list>
			</table>
		</group>

	</form>
</output>