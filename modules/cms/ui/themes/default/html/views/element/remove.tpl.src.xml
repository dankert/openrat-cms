<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form>
		<group>
			<fieldset class="line" label="${message:ELEMENT_NAME}">
				<text value="${name}" class="name"/>
			</fieldset>
		</group>
		<group title="${message:options}">
			<fieldset class="line" label="">
				<checkbox name="confirm" required="true" label="${message:CONFIRM_DELETE}"/>

				<radio name="type" value="value" label="${message:ELEMENT_DELETE_VALUES}"/>
				<radio name="type" value="all" label="${message:DELETE}"/>
			</fieldset>
		</group>
	</form>
</output>
