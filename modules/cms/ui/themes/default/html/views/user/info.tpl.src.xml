<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">

    <form cancel="false" readonly="true">
        <text var="fullname" class="headline"/>

        <if not="true" empty="image">
            <part class="line">
                <part class="input">
                    <image url="${image}" size="80x80"/>
                </part>
            </part>
        </if>

        <part class="line">
            <part class="label">
                <text key="user_username" />
            </part>
            <part class="input">
                <text var="name" class="name" />
            </part>
        </part>

        <group title="#{ADDITIONAL_INFO}">
            <part class="line">
                <part class="label">
                    <text key="user_fullname" />
                </part>
                <part class="input">
                    <text var="fullname" />
                </part>
            </part>
            <if true="%{security/user/show_admin_mail}">
                <part class="line">
                    <part class="label">
                        <label for="mail" key="user_mail"></label>
                    </part>
                    <part class="input">
                        <link url="mailto:${mail}" type="external">
                            <text var="mail"/>
                        </link>

                        <qrcode value="mailto:${mail}"/>
                    </part>
                </part>
            </if>
            <part class="line">
                <part class="label">
                    <text key="description"></text>
                </part>
                <part class="input">
                    <text var="desc" />
                </part>
            </part>
            <part class="line">
                <part class="label">
                    <label for="tel" key="user_tel"></label>
                </part>
                <part class="input">
                    <text var="tel" />
                    <qrcode value="tel:${tel}"/>

                </part>
            </part>
            <part class="line">
                <part class="label">
                        <text key="timezone"/>
                </part>
                <part class="input">
                    <text var="timezone"/>
                </part>
            </part>
            <part class="line">
                <part class="label">
                    <label for="">
                        <text key="language"/>
                    </label>
                </part>
                <part class="input">
                    <text var="language" />
                </part>
            </part>
            <part class="line">
                <part class="label">
                </part>
                <part class="input clickable">
                    <link type="dialog" subaction="prop" class="or-link-btn">
                        <text key="edit"/>
                    </link>
                </part>
            </part>


        </group>


        <group title="#{options}" open="false">
            <part class="line">
                <part class="label">
                </part>
                <part class="input">
                    <checkbox name="is_admin" readonly="true"></checkbox>
                    <label for="is_admin" key="user_admin"></label>
                </part>
            </part>
            <part class="line">
                <part class="label">
                    <text key=":user_ldapdn"></text>
                </part>
                <part class="input">
                    <text var="ldap_dn"></text>
                </part>
            </part>
            <part class="line">
                <part class="label">
                    <text key="user_style"></text>
                </part>
                <part class="input">
                    <text var="style"></text>
                </part>
            </part>
        </group>
        <group title="#{security}" open="false">
            <part class="line">
                <part class="label">
                    <text text="user_password_expires"/>
                </part>
                <part class="input">
                    <date date="${passwordExpires}"/>
                </part>
            </part>
            <part class="line">
                <part class="label">
                </part>
                <part class="input clickable">
                    <link type="dialog" subaction="pw" action="user" class="or-link-btn">
                        <text key="edit_password"/>
                    </link>
                </part>
            </part>

            <part class="line">
                <part class="label">
                    <text text="user_last_login"/>
                </part>
                <part class="input">
                    <date date="${lastLogin}"/>
                </part>
            </part>

            <!-- TOTP Settings -->
            <part class="line">
                <part class="label">
                    <text text="token"/>
                </part>
                <part class="input">
                    <text value="${totpToken}"/>
                </part>
            </part>
            <part class="line">
                <part class="label">
                    <label for="totp" key="user_totp"></label>
                </part>
                <part class="input">
                    <checkbox name="totp"/>
                    <label for="totp" key="user_totp"></label>

                    <!--<text var="otpSecret"></text>-->
                    <qrcode value="${totpSecretUrl}"/>
                </part>
            </part>

            <!-- HOTP is not implemented -
            <part class="line">
                <part class="label">
                    <label for="otpsecret" key="user_hotp"></label>
                </part>
                <part class="input">
                    <checkbox name="hotp"/>
                    <label for="hotp" key="user_hotp"></label>

                    <qrcode value="${hotpSecretUrl}"/>
                </part>
            </part>
            -->
        </group>
    </form>
</output>