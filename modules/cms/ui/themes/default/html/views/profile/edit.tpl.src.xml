<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<header views="mail"></header>
	<form label="${message:save}">
		<group title="${message:name}">
			<part class="line">
				<part class="label">
					<label for="name" key="user_username"></label>
				</part>
				<part class="input">
					<text value="${name}" class="name"></text>
				</part>
			</part>
		</group>
		<group title="${message:MENU_PROFILE_MAIL}">
			<part class="line">
				<part class="label">
					<label for="mail" key="user_mail"></label>
				</part>
				<part class="input">
					<text value="${mail}"></text>
					<newline />
					<newline />
					<part class="clickable">
						<link type="dialog" class="action" action="profile" subaction="mail" name="${message:mail}">
							<text value="${message:edit}"></text>
						</link>
					</part>
				</part>
			</part>
		</group>
		<group title="${message:PROP}">
			<part class="line">
				<part class="label">
					<label for="fullname" key="user_fullname"></label>
				</part>
				<part class="input">
					<input name="fullname" maxlength="128"></input>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="tel" key="user_tel"></label>
				</part>
				<part class="input">
					<input name="tel" size="40" maxlength="128"></input>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="desc" key="user_desc"></label>
				</part>
				<part class="input">
					<input name="desc" size="40" maxlength="128"></input>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="style" key="user_style"></label>
				</part>
				<part class="input">
					<selectbox name="style" list="allstyles"
						class="or-theme-chooser"></selectbox>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="timezone_offset">
						<text value="${message:timezone}" />
					</label>
				</part>
				<part class="input">
					<selectbox name="timezone" list="timezone_list"
						addempty="true"></selectbox>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="">
						<text value="${message:language}" />
					</label>
				</part>
				<part class="input">
					<selectbox name="language" list="language_list" addempty="true"></selectbox>
				</part>
			</part>
		</group>
		<group title="${message:security}">
			<part class="line">
				<part class="label">
					<text value="${message:user_password_expires}" />
				</part>
				<part class="input">
					<date date="${passwordExpires}" />
				</part>  
			</part>
			<part class="line">
				<part class="label">
				</part>
				<part class="input">
					<checkbox name="totp"/><label for="totp" key="user_totp"></label>
					<qrcode value="${totpSecretUrl}" />
				</part>  
			</part>
			<part class="line">
				<part class="label">
				</part>
				<part class="input">
					<checkbox name="hotp"/><label for="hotp" key="user_hotp"></label>
					<qrcode value="${hotpSecretUrl}" />
				</part>
			</part>
		</group>
	</form>
</output>