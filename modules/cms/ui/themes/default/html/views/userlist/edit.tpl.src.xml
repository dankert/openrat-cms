<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
  <table>
    <row class="headline">
      <column>
        <image type="user"/>
        <text value="${message:name}"/>
      </column>
      <column>
        <text value=""/>
      </column>
    </row>
    <list list="${list}" extract="true">
      <row class="data,act-clickable" >
        <column id="${id}" name="${name}" action="user" class="">
          <link type="open" id="${id}" name="${name}" action="user">
            <image action="user"/>
            <text value="${name}"/>
          </link>
        </column>
        <column id="${id}" name="${name}" action="user">
          <text value="${fullname}"/>
          <if true="${isAdmin}">
            <text value="_("/>
            <text value="${message:USER_ADMIN}"/>
            <text value=")"/>
          </if>
        </column>
      </row>
    </list>
    <row class="data">
      <column colspan="2" class="act-clickable">
        <link type="dialog" subaction="add" name="${message:add}">
          <image method="add"/>
          <text value="${message:add}"/>
        </link>
      </column>
    </row>
  </table>
</output>
