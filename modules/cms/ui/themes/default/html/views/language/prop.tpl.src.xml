<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<header back="true"></header>
	<form method="post">

		<part class="line">
			<part class="label">
				<text value="${message:GLOBAL_NAME}"></text>
			</part>
			<part class="input">
				<input name="name" class="focus" maxlength="50"></input>
			</part>
		</part>


		<part class="line">
			<part class="label">
				<text value="${message:LANGUAGE_ISOCODE}"></text>
			</part>
			<part class="input">
				<input name="isocode"></input>
			</part>
		</part>

		<part class="line">
			<part class="label">
			</part>
			<part class="input">
				<checkbox name="is_default" readonly="${is_default}"></checkbox>
				<label key="GLOBAL_is_default" for="is_default" />
			</part>
		</part>
	</form>
</output>