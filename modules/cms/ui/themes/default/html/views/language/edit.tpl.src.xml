<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<group title="${message:language} ${name}">

		<fieldset label="${message:NAME}">
			<text value="${name}" class="name"/>
		</fieldset>

		<fieldset label="${message:LANGUAGE_ISOCODE}">
			<text value="${isocode}"/>
		</fieldset>

		<fieldset label="">
			<link clickable="true" class="btn" action="language" subaction="prop" type="edit">
				<text value="${message:edit}"/>
			</link>
		</fieldset>
	</group>
</output>
