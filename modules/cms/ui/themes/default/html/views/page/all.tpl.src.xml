				<if value="${type}" equals="date">
					<fieldset label="">
						<input type="date" name="${name}_date" label="date" default="${value}" />
						<input type="time" name="${name}_time" label="time" default="${value}" />
					</fieldset>
				</if>
				<if value="${type}" equals="text">
					<fieldset>
						<input size="50" maxlength="255" class="text" name="text" default="${value}" />
					</fieldset>
				</if>
				<if value="${type}" equals="longtext">
					<hidden name="format"/>
					<if value="${editor}" equals="markdown">
						<fieldset>
						<editor type="markdown" name="${name}" default="${value}" />
						</fieldset>
					</if>
					<if value="${editor}" equals="html">
						<fieldset>
						<editor type="html" name="${name}"  default="${value}" />
						</fieldset>
					</if>
