<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form method="get" subaction="changetemplateselectelements" visible="true" cancel="true" label="${message:BUTTON_NEXT}">
		<hidden name="templateid" />
		<hidden name="modelid" />
		
		<part class="line">
			<part class="label">
				<text value="${message:page_template_old}"></text>
			</part>
			<part class="value">
				<link url="${template_url}" target="cms_main">
					<image type="template"></image>
					<text value="${template_name}"></text>
				</link>
			</part>
		</part>

		<part class="line">
			<part class="label">
				<text value="${message:page_template_new}"></text>
			</part>
			<part class="value">
				<selectbox name="newtemplateid" list="templates" default=""></selectbox>
			</part>
		</part>

	</form>
</output>