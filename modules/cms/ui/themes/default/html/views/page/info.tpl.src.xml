<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../../template_engine/components/template.xsd">
	<form readonly="true" cancel="false">

		<text value="${name}" class="headline"  />

		<group>
			<part class="line">
				<part class="label">
					<text value="${message:type}" />
				</part>
				<part class="input">
					<text value="${message:${type}}" />
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:filename}"></text>
				</part>
				<part class="input">
					<text value="${filename}" />
				</part>
			</part>
			<part class="line">
				<part class="label">
					<text value="${message:description}"></text>
				</part>
				<part class="input">
					<text value="${description}" class="description" />
				</part>
			</part>
			<part class="line">
				<part class="label">
				</part>
				<part class="input clickable">
					<link subaction="prop" class="or-btn" type="dialog">
						<text value="${message:edit}" />
					</link>
				</part>
			</part>
		</group>

		<list list="${languages}" extract="true">


			<group title="${languagename}">

				<text label="name" value="${name}" />
				<text label="description" value="${description}" />

				<text label="alias" value="${alias}" />

				<part class="clickable">
					<link class="or-btn" type="edit" action="page" subaction="name" var1="languageid" value1="${languageid}">
						<text value="${message:edit}" />
					</link>
				</part>
			</group>

		</list>

		<group title="${message:additional_info}" open="false">

			<part class="line">
				<part class="label">
					<label for="full_filename">
						<text value="${message:full_filename}"></text>
					</label>
				</part>
				<part class="input">
					<text value="${full_filename}" class="filename"></text>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="full_filename">
						<text value="${message:full_filename}"></text>
					</label>
				</part>
				<part class="input">
					<text value="${tmp_filename}" class="filename"></text>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="template_name">
						<text value="${message:template}"></text>
					</label>
				</part>
				<part class="input">
					<if present="templateid">
						<part class="clickable">
							<link action="template" id="${templateid}" type="open">
								<image action="template"></image>
								<text value="${template_name}"></text>
							</link>
						</part>
					</if>
					<else>
						<image action="template"></image>
						<text value="${template_name}"></text>
					</else>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="mime_type">
						<text value="${message:FILE_MIMETYPE}"></text>
					</label>
				</part>
				<part class="input">
					<text value="${mime_type}" class="filename"></text>
				</part>
			</part>
			<part class="line">
				<part class="label">
					<label for="objectid">
						<text value="${message:id}"></text>
					</label>
				</part>
				<part class="input">
					<text value="${objectid}"></text>
				</part>
			</part>
		</group>

		<include file="../include/timestamps" />
	</form>
</output>